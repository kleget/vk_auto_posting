[Unit]
Description=vk_bot
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/vk_project/vk_auto_posting_bot
ExecStart=/root/vk_project/venv/bin/python3 /root/vk_project/vk_auto_posting_bot/main.py
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target